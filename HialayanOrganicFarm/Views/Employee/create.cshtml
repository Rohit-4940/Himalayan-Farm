@model Employee;
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

    <title></title>
</head>
<body>
    <style>
        body {
            background-color: #FBFCFC;
        }

        .container {
            background-color: white;
            height: 430px;
            width: 1100px;
            margin-top: 57px;
        }

        .text-center {
            font-family: cursive;
        }

        .downpart {
            background-color: #383838;
            border: none;
        }
        .line{
            border: solid #6cbe03 1px;
        }
    </style>
    <form asp-controller="Employee" asp-action="create" method="Post" class="mt-3">
        <hr class="line" />
        <div class="container">
            <div class="text"></div>
            <h2 class="text-center text-success" style="margin-top:30px">Create Employee Form</h2>
            <div class="form-group">

                <div class="input-group" style="margin-top:25px">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input id="Name" type="text" class="form-control" name="Name" placeholder="Name"><br />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
                <br />
                <div>
                    <select asp-for="department.Title" asp-items="@Model.department.Title" class="custom-select" style="cursor:pointer;">
                        <option value="">Please select the Department from the List</option>
                        <option>Hr department</option>
                    </select>
                </div>
                <span asp-validation-for="department.Title" class="text-danger"></span>
                <br />
                <div>
                    <select asp-for="designation.Title" class="custom-select" name="designation.Title" style="cursor:pointer;">
                        <option value="designation.Title">Please select the Designation from the List</option>
                    </select>
                </div>
                <span asp-validation-for="designation.Title" class="text-danger"></span>
                
                <div class="input-group" style="margin-top:25px">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="text" class="form-control" name="Email" placeholder="Email">
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>


                <div class="input-group" style="margin-top:45px">
                    <button class="btn btn-success">Create</button>
                </div>
            </div>
        </div>
    </form>

</body>
</html>