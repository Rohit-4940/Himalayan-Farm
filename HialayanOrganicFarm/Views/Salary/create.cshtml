@model Salary;

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

    <title></title>
</head>
<body>
    <style>
        body {
            background-color: #FBFCFC;
        }

        .container {
            background-color: white;
            height: 540px;
            width: 1100px;
            margin-top: 57px;
        }

        .text-center {
            font-family: cursive;
        }

        .downpart {
            background-color: #383838;
            border: none;
        }
        .line{
            border: solid #6cbe03 1px;
        }
    </style>
    <form asp-controller="Salary" asp-action="create" method="Post" class="mt-3">
        <hr class="line" />
        <div class="container">
            <div class="text"></div>
            <h2 class="text-center text-success" style="margin-top:30px">Create Salary Form</h2>
            <div class="form-group">
                @*<div class="input-group" style="margin-top:35px">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input id="id" type="text" class="form-control" name="id" placeholder="Enter Your id(Not Nessary)">
        </div>*@
               
                <div>
                    <select asp-for="employee.Name" class="custom-select" name="employee" style="cursor:pointer;">
                        <option value="">Please select the Name of Employee from the List</option>
                    </select>
                </div>
                    <span asp-validation-for="employee.Name" class="text-danger"></span>
               
               
                    <div class="input-group" style="margin-top:25px">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="leave_type" type="text" class="form-control" name="select_month" placeholder="Enter the month"><br />
                    </div>
                <span asp-validation-for="select_month" class="text-danger"></span>
                
               
                <div class="input-group" style="margin-top:25px">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="text" class="form-control" name="amount" placeholder="Amount">
                </div>
                <span asp-validation-for="amount" class="text-danger"></span>
                
                
                <div class="input-group" style="margin-top:25px">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="text" class="form-control" name="date" placeholder="Date salary provided">
                </div>
                <span asp-validation-for="date" class="text-danger"></span>
                
                
                <div class="input-group" style="margin-top:25px">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="text" class="form-control" name="description" placeholder="Description">
                </div>
                <span asp-validation-for="description" class="text-danger"></span>
                
                <div class="input-group" style="margin-top:45px">
                    <button class="btn btn-success">Create</button>
                </div>
            </div>
        </div>
    </form>

</body>
</html>